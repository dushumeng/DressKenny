<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_robot">


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/drawable_main_line_bg"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/robot_tip"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/robot_tip_padding_left_right"
        android:paddingRight="@dimen/robot_tip_padding_left_right"
        android:textSize="@dimen/robot_tip_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="13:1"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_tip_left"
        app:layout_constraintRight_toRightOf="@+id/guideline_tip_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/robot_body"
        app:layout_constraintTop_toBottomOf="@+id/guideline_robot_top"
        app:layout_constraintBottom_toTopOf="@+id/guideline_robot_bottom"
        app:layout_constraintDimensionRatio="H,1.54:1"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_robot_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.215"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_robot_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.898"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_tip_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.078"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_tip_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.921"
        />
</android.support.constraint.ConstraintLayout>